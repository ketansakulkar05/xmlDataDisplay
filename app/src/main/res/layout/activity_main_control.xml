<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainControlActivity">

    <Button
        android:id="@+id/displayPie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pie Chart forTest Case"
        app:layout_constraintBottom_toTopOf="@+id/lineGraph_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/lineGraph_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Line Graph for Component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayPie_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>